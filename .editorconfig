# editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 8
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

[*.{yml,md,json}]
indent_size = 2
indent_style = space

[*.md]
trim_trailing_whitespace = false

[*Gemfile*]
indent_size = 2
indent_style = space
